{
  "name": "dev-tips-server",
  "version": "1.0.0",
  "description": "Random dev-tips everyday!",
  "author": "Wesley Damasceno",
  "scripts": {
    "build": "tsup",
    "start": "node dist/server.js",
    "start:dev": "tsx --watch src/server.ts",
    "db:up": "docker compose up -d",
    "db-test:up": "docker compose -f docker-compose-test.yml up -d",
    "db:down": "docker compose down",
    "test:unit": "jest test/unit --verbose",
    "test:integration": "jest test/integration --verbose",
    "test": "jest",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "bcrypt": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "pg": "8.13.1",
    "reflect-metadata": "0.2.2",
    "typeorm": "0.3.20"
  },
  "devDependencies": {
    "@eslint/js": "9.16.0",
    "@types/bcrypt": "5.0.2",
    "@types/cors": "2.8.17",
    "@types/dotenv": "8.2.3",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.10.2",
    "@types/supertest": "6.0.2",
    "eslint": "9.16.0",
    "globals": "15.13.0",
    "jest": "29.7.0",
    "jest-cli": "29.7.0",
    "prettier": "3.4.2",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "tsup": "8.3.5",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "typescript-eslint": "8.18.0"
  },
  "license": "MIT"
}
